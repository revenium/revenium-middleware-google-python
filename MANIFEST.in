# Include documentation and licensing
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include SECURITY.md
include CODE_OF_CONDUCT.md

# Examples package is included automatically via pyproject.toml packages list

# Exclude development and internal files
exclude .gitignore
exclude .gitleaksignore
exclude *.sh
exclude test-*.py
exclude *_debug.py
exclude *-allowlist*.txt
exclude *-report.json
exclude sbom.json

# Exclude repository management
prune .github
prune repo-plans

# Exclude tests
prune tests

# Exclude Python cache and compiled files
prune __pycache__
global-exclude *.pyc
global-exclude *.pyo
global-exclude .DS_Store
